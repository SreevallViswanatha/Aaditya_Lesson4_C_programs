#include <stdio.h>
#include <stdlib.h>
//WAP to accept a number and display the sum of numbers from 1 to the given number.
int main()
{
    int number, n, sum;
    printf("Enter a number:");
    scanf("%d", &n);
    number=1;
    while(n>=number)
    {
        sum=(n*n+n)/2;
        number++;
    }
    printf("%d", sum);
}
